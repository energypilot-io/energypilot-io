{
    "name": "energypilot-io",
    "version": "0.1",
    "scripts": {
        "ng": "ng",
        "start": "concurrently \"npm run serve-api\" \"npm run serve\"",
        "start-ui-remote-server": "ng serve --port 3333 --proxy-config proxy.config.remote-server.json",
        "build": "ng build",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "serve": "ng serve --port 3333 --proxy-config proxy.config.json",
        "serve-api": "cd server & nodemon --watch server",
        "extract-i18n": "ng extract-i18n --format=json --output-path=src/locale"
    },
    "prettier": {
        "plugins": [
            "prettier-plugin-tailwindcss"
        ],
        "trailingComma": "es5",
        "tabWidth": 4,
        "useTabs": false,
        "semi": false,
        "singleQuote": true,
        "htmlWhitespaceSensitivity": "ignore",
        "arrowParens": "avoid",
        "bracketSpacing": true,
        "bracketSameLine": true,
        "overrides": [
            {
                "files": "*.html",
                "options": {
                    "parser": "angular"
                }
            }
        ]
    },
    "private": true,
    "dependencies": {
        "@angular/cdk": "~20.2.8",
        "@angular/common": "^20.3.0",
        "@angular/compiler": "^20.3.0",
        "@angular/core": "^20.3.0",
        "@angular/forms": "^20.3.0",
        "@angular/material": "~20.2.8",
        "@angular/material-date-fns-adapter": "^20.2.9",
        "@angular/platform-browser": "^20.3.0",
        "@angular/router": "^20.3.0",
        "@ngx-formly/core": "^7.0.0",
        "@ngx-formly/material": "^7.0.0",
        "@ngx-translate/core": "^17.0.0",
        "@ngx-translate/http-loader": "^17.0.0",
        "@tailwindcss/postcss": "^4.1.17",
        "@types/cors": "^2.8.19",
        "concurrently": "^9.2.1",
        "date-fns": "^4.1.0",
        "echarts": "^6.0.0",
        "express": "^5.1.0",
        "ngx-device-detector": "^10.0.0",
        "ngx-echarts": "^20.0.2",
        "ngx-socket-io": "4.9.3",
        "postcss": "^8.5.6",
        "rxjs": "~7.8.0",
        "tailwindcss": "^4.1.17",
        "tslib": "^2.3.0",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular/build": "^20.3.5",
        "@angular/cli": "^20.3.5",
        "@angular/compiler-cli": "^20.3.0",
        "@ngx-formly/schematics": "^7.0.0",
        "@types/express": "^5.0.5",
        "@types/jasmine": "~5.1.0",
        "angular-eslint": "^20.6.0",
        "baseline-browser-mapping": "^2.9.13",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-unused-imports": "^4.3.0",
        "jasmine-core": "~5.9.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "prettier-plugin-tailwindcss": "^0.7.1",
        "typescript": "~5.9.2",
        "typescript-eslint": "^8.47.0"
    }
}
