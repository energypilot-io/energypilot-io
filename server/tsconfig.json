{
    "compilerOptions": {
        "outDir": "./out-tsc/app",
        "lib": ["es2023"],
        "module": "es2022",
        "target": "es2022",
        "allowJs": true,

        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,

        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["src/**/*", "eslint.config.mjs", "../constants.ts"],
    "exclude": ["node_modules"]
}
